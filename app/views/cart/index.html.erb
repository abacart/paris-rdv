<h1>Cart</h1>
<table class="table">
    <tr>
      <th></th>
      <th>Quantity</th>
      <th>Name</th>
      <th>Price</th>
    </tr>
  <% @user_products.each do |up| %>
    <tr>
      <td><%= link_to 'X', remove_cart_index_path(up.product), method: :delete %></td>
      <td><%= up.quantity %></td>
      <td><%= link_to up.name, up.product %></td>
      <td><%= number_to_currency up.price %></td>
    </tr>
  <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>Total</td>
      <td><%= number_to_currency current_user.total_cart %></td>
    </tr>
</table>
